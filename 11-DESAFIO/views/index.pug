html(lang="es")
    head
        title Productos en Pug
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")
    body
      .container.pt-3
        .row.d-flex.justify-content-center
            .col-md-6.mt-5.pb-3
              form(action="guardarform" method="post" enctype="application/x-www-form-urlencoded")
                .row.g-3
                  .col-sm
                    input(type="text" name="title" class="form-control" placeholder="title" aria-label="Title")
      
                  .col-sm
                    input(type="text" name="price" class="form-control" placeholder="price" aria-label="Price")
                  .col-sm
                    input(type="text" name="thumbnail" class="form-control" placeholder="thmubnail" aria-label="Thumbnail")
                  .col-sm
                    input(type="submit" class="btn btn-primary" value="Guardar producto")
        .container
            .row.justify-content-center
                .col-md-6.mt-5
                    h2.text-center Vista de productos
                    table.table.table-striped.table-hover.mt-5.text-center.table-dark.table-striped
                        thead
                            tr
                                th # 
                                th Title
                                th Price
                                th Thumbnail
                        tbody
                            if items.length != 0
                                each item of items
                                    tr(style="vertical-align: middle;")
                                        th= item.id
                                        td= item.title
                                        td= item.price
                                        td
                                            img(src=item.thumbnail height="100")
                            else
                                tr
                                    td.text-center(colspan="4") No hay productos
                                tr


                        
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj"
        crossorigin="anonymous")