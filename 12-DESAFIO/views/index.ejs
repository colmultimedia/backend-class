<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

    <title>Listado productos</title>
  </head>
  <body>

    <!-- Optional JavaScript; choose one of the two! -->
    <div class="container pt-3">
      <div class="row  d-flex justify-content-center ">
        <div class="col-8 pb-3">
          <form action="guardarform" method="post" enctype="application/x-www-form-urlencoded">
           <div class="row g-3">
     <div class="col-sm">
       <input type="text" name="title" class="form-control" placeholder="title" aria-label="Title">
     </div>
     <div class="col-sm">
       <input type="text" name="price" class="form-control" placeholder="price" aria-label="Price">
     </div>
     <div class="col-sm">
       <input type="text" name="thumbnail" class="form-control" placeholder="thmubnail" aria-label="Thumbnail">
     </div>
      <div class="col-sm">
        <input type="submit" class="btn btn-primary" value="Guardar producto">
        </form>
        </div>
      </div>
     </div>

     <div class="container">
      <div class="table">
        <script type="text/html" id="template">
           <table class="table table-dark table-striped">
             <thead>
               <tr>
                 <th scope="col">ID</th>
                 <th scope="col">TITLE</th>
                 <th scope="col">PRICE</th>
                 <th scope="col">thumbnail</th>
               </tr>
             </thead>
              <tbody>
                <% if (productos.length != 0) { %>
                  <% productos.forEach((productos) => { %>
                 <tr>
                   <th scope="row"><%= productos.id %></th>
                   <td><%= productos.title %></td>
                   <td><%= productos.price %></td>
                   <td><img src ="<%= productos.thumbnail %>"" width="100" height="100"></td>
                 </tr>
                 <% }); %>
                 <% } else { %>
                  <tr>
                    <td colspan="4" class="text-center">No hay productos</td>
                </tr>
            <% } %>
          </table>
        </script>
        <div id="toRender"></div>
         </div>
      </div>
      </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
